<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" tools:context=".Tab1">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp" android:id="@+id/textViewChart1Yaxis" android:gravity="left"
                    android:layout_gravity="left" android:textSize="16sp"/>
            <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:id="@+id/DataPreviewLineChart1">
            </com.github.mikephil.charting.charts.LineChart>

            <TextView
                    android:text="time [ms]"
                    android:layout_width="200dp"
                    android:layout_height="30dp" android:id="@+id/textViewChart1Xaxis"
                    android:layout_gravity="right" android:gravity="right" android:textSize="16sp"/>


            <TextView
                    android:layout_width="280dp"
                    android:layout_height="30dp" android:id="@+id/textViewChart2Yaxis" android:gravity="left"
                    android:layout_gravity="left" android:textSize="16sp"/>
            <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:id="@+id/DataPreviewLineChart2"></com.github.mikephil.charting.charts.LineChart>
            <TextView
                    android:text="time [ms]"
                    android:layout_width="200dp"
                    android:layout_height="30dp" android:id="@+id/textViewChart2Xaxis"
                    android:layout_gravity="right" android:gravity="right" android:textSize="16sp"/>


            <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp" android:id="@+id/textViewChart3Yaxis" android:gravity="left"
                    android:layout_gravity="left" android:textSize="16sp"/>
            <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:id="@+id/DataPreviewLineChart3"></com.github.mikephil.charting.charts.LineChart>
            <TextView
                    android:text="time [ms]"
                    android:layout_width="200dp"
                    android:layout_height="30dp" android:id="@+id/textViewChart3Xaxis"
                    android:layout_gravity="right" android:gravity="right" android:textSize="16sp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>